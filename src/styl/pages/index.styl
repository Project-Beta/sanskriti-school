@require "../imports/main"

section.top
	height 70%
	width 100%
	
	div.carousel
		width 60%
		height 100%
		
		div.carousel-box
			height 100%
			
			img
				height 80%
				width auto
				box-shadow 0 0 2px black
	
section.middle
	height 80%
	width 100%
	background #23236d
	justify-content space-around
	
	div.updates
		width 100%
		height 100%
		
		div.updates-box
			width 80%
			height 80%
			flex-direction column
			
			div.updates-top
				width 100%
				height 15%
				border-bottom 3px solid #aaa
				
				a
					font-family "Libre Baskerville"
					font-size 150%
					font-weight bold
					color sanskriti-orange
				
			div.updates-list
				width 85%
				height 85%
				flex-direction column
				justify-content space-around

				li.updates-item
					border-bottom 1px solid #aaa
					color #eee
					font-family "Oxygen"
					font-size 19px
					font-weight 100
					list-style-position inside
					list-style-type none
					padding 5% 0
					text-align center

					&:nth-child(3)
						border none

				a
					font-size 17px
					color sanskriti-orange
					
					
			div.updates-calendar
				height 15%
				width 100%
				border-top 3px solid #aaa
				
				a
					font-size 20px
					color sanskriti-orange
					font-weight bold