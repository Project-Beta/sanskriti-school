@require "../imports/main"

section.top
	height 60%
	width 100%
	
	div.carousel
		width 60%
		height 100%
		
		div.carousel-box
			height 100%
			
			img
				height 80%
				width auto
				box-shadow 0 0 2px black
	 	
	div.news
		width 40%
		height 100%
		
		div.news-box
			width 50%
			height 80%
			flex-direction column
			border 4px solid sanskriti-blue
			
			div.news-top
				width 100%
				height 20%
				border-bottom 3px solid #aaa
				
				a
					font-size 300%
					font-weight bold
					color sanskriti-orange
				
			div.news-list
				width 90%
				height 65%
				flex-direction column
				justify-content space-around

				li.news-item
					list-style-type circle
					font-size 19px
					text-align justify
					list-style-position inside
				
				a
					font-size 20px
					
					
			div.news-calendar
				height 15%
				width 100%
				border-top 3px solid #aaa
				
				a
					font-size 20px
					color sanskriti-orange
					font-weight bold

section.middle
	height 60%
	width 100%
	background sanskriti-blue