// MAX SCREEN WIDTH - 767px
@media only screen and (max-width: 767px)

	section.main

		div.container
			padding 20px 0

			div.title

				h1
					font-size 35px
			
			div.text

				p
					font-size 19px
					padding 20px 0
				
				h2
					font-size 23px
				
				img
					width 100%
				
				table
					margin 5% 0
				
				li
					font-size 19px !important
					padding 5px 0
				
				a
					font-size 19px