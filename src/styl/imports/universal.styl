*
	padding 0
	margin 0
	position relative
	box-sizing border-box
	text-rendering optimizeLegibility


*.flex
	display flex
	align-items center
	justify-content center

*.noselect
	user-select none

*.nodisplay
	display none


*.container
	width 100%
	height 100%
	justify-content flex-start
	flex-direction column

a
	
	&:link, &:visited, &:hover, &:visited:hover, &:focus
		text-decoration none

section.main
	height 100%
	width 100%
	z-index -1