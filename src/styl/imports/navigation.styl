section.navigation
	width 100%
	min-height 110px
	height 15%
	flex-direction column
	justify-content space-between
	background sanskriti-blue
	z-index 1

	div.header
		width 100%
		height 100%

		a
			width 100%
			flex-direction row

			img
				height 50px
				width auto
				margin 0 35px 0 0
				filter drop-shadow(0 0 3px #000)

			h1
				font-size 280%
				font-family "Old English"
				color sanskriti-orange
				letter-spacing 4px

	div.links
		width 100%
		height 100%
		margin 0 auto
		background sanskriti-blue
		border-bottom 1px solid sanskriti-orange
		flex-direction column

		div.container
			overflow-x auto
			overflow-y hidden
			-webkit-overflow-scrolling touch
			-ms-overflow-style -ms-autohiding-scrollbar
			max-width 1200px
			flex-direction row

			div.link
				color #9a9a9a
				flex 0 0 auto
				height 100%
				transition 0.3s all
				padding 0 20px
				margin 0 auto
				flex-direction column

				a
					color inherit
					text-decoration none
					font-size 130%
					height 100%
					width 100%
					font-variant all-small-caps

				&:hover
					cursor pointer
					color #fff

			&::-webkit-scrollbar
				height 7px

			&::-webkit-scrollbar-thumb
				background #ff7d5682

		div.level1
			background sanskriti-blue

		div.level2
			background sanskriti-dark-blue