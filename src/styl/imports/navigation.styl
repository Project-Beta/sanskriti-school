section.navigation
	width 100%
	min-height 110px
	height 15%
	flex-direction column
	justify-content space-between
	background sanskriti-blue
	z-index 1

	div.header
		width 100%
		height 100%

		img
			height 65px
			width auto
			margin 0 35px 0 0
			filter drop-shadow(0 0 3px #000)

		h1
			font-size 300%
			font-family "Old English"
			color sanskriti-orange
			letter-spacing 4px

			@media screen and (max-width:500px)
				font-size 210%
				letter-spacing 2px

	div.links
		width 100%
		height 100%
		margin 0 auto
		background sanskriti-blue
		box-shadow 0px 5px 10px -5px #000
		flex-direction column

		div.container
			overflow-x auto
			overflow-y hidden
			-webkit-overflow-scrolling touch
			-ms-overflow-style -ms-autohiding-scrollbar
			max-width 1200px
			flex-direction row

			div.link
				color #9a9a9a
				flex 0 0 auto
				height 100%
				transition 0.3s all
				padding 0 20px
				margin 0 auto
				flex-direction column

				@media screen and (max-width:500px)
					padding 0 13px

				a
					color inherit
					text-decoration none
					font-size 130%
					height 100%
					width 100%
					font-variant all-small-caps

					@media screen and (max-width:500px)
						font-size 110%

				&:hover
					cursor pointer
					color #fff

			&::-webkit-scrollbar
				height 0

			&:hover::-webkit-scrollbar
				height 7px

				@media screen and (max-width:500px)
					height 0

			&:hover::-webkit-scrollbar-thumb
				background rgba(84, 84, 84, 0.7)

		div.level1
			background sanskriti-blue

		div.level2
			background sanskriti-dark-blue