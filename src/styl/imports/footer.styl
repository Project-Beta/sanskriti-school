section.footer
	height 50%
	width 100%
	background #323248
	color #eee
	font-family "Oxygen"
	
	div.footer-content
		width 100%
		height 90%
		border-bottom 1px solid rgba(255, 255, 255, 0.07)
		
		div.map
			width 40%
			height 100%
		
		div.info
			width 60%
			height 70%
			
			> div
				width 100%
				height 100%
				align-items flex-start
				
				div.data
					width 85%
					
					h1
						padding 10px 0
						font-size 110%
						color #ff9d53
						border-bottom 1px solid
						margin 0 0 20px 0
					
					p, a
						color #bbb
						
					a
						padding 0 0 5px 0
						display block
						transition 0.2s all linear
						
						&:hover
							color #fff
	
	div.credits
		height 10%
		
		p
			text-align center
			font-size 15px
			color #aaa
			
			a
				color inherit
				transition 0.2s all linear

			a:hover
				color #fff
						
